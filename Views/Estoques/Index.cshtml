@model IEnumerable<ProductManagementSystem1.DTOs.EstoqueListDTO>

@{
    ViewData["Title"] = "Estoque";
}

<h1>Estoque</h1>

<p>
    <a asp-action="Create" class="btn btn-primary mb-3"><i class="fa fa-add"></i> Adicionar Novo Estoque</a>
    <a asp-action="ExportToCsv" class="btn btn-secondary mb-3"><i class="fa fa-download"></i> Exportar para CSV</a>
</p>

<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Produto</th>
            <th>Fornecedor</th>
            <th>Quantidade</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.NomeProduto</td>
                <td>@item.NomeFornecedor</td>
                <td>@item.Quantidade</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary"><i class="fa fa-edit"></i> Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-secondary"><i class="fa fa-eye"></i> Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i> Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
