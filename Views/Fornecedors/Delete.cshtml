@model ProductManagementSystem1.Models.Fornecedor

@{
    ViewData["Title"] = "Deletar Fornecedor";
}


<div class="card">
    <div class="card-body">
        <h3 class="card-title">Você deseja excluir este fornecedor?</h3>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Nome:</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Nome)</dd>
            <dt class="col-sm-2">Telefone:</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Telefone)</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Confirmar Exclusão</button>
            <a asp-action="Index" class="btn btn-secondary">Voltar para Lista</a>
        </form>
    </div>
</div>
