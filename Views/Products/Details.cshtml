@model ProductManagementSystem1.Models.Product

@{
    ViewData["Title"] = "Detalhes";
}

<h1 class="my-4">Detalhes do Produto</h1>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Produto</h4>
        <hr />
    <dl class="row">
        <dt class="col-sm-2">
           Nome:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            Descrição:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            Preço em R$:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Preco)
        </dd>
        <dt class="col-sm-2">
            Id Fornecedor:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FornecedorId)
        </dd>
        <dt class="col-sm-2">
            Criado em:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataDeCriacao)
        </dd>
    </dl>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Voltar para Lista</a>
</div>
