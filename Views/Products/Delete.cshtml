@model ProductManagementSystem1.Models.Product

@{
    ViewData["Title"] = "Excluir";
}

<h1 class="my-4">Excluir Produto</h1>

<div class="card">
    <div class="card-body">
        <h3 class="card-title">Você deseja excluir este Produto?</h3>
    <hr />
    <dl class="row">
            <dt class="col-sm-2">
                Nome:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2">
                Descrição:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Descricao)
            </dd>
            <dt class="col-sm-2">
                Preço em R$:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Preco)
            </dd>
            <dt class="col-sm-2">
                Id Fornecedor:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FornecedorId)
            </dd>
            <dt class="col-sm-2">
                Criado em:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DataDeCriacao)
            </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-action="Index" class="btn btn-secondary">Voltar para Lista</a>
    </form>
    </div>
</div>
