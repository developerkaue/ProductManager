@model IEnumerable<ProductManagementSystem1.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<h1 class="my-4">Lista de Produtos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary mb-3"><i class="fa fa-add"></i> Adicionar Novo</a>
</p>
<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                Nome
            </th>
            <th>
                Descrição
            </th>
            <th>
                Preço em R$
            </th>
            <th>
                Id Fornecedor
            </th>
            <th>
                Criado em
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Preco)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FornecedorId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataDeCriacao)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary"><i class="fa fa-edit"></i> Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-secondary"><i class="fa fa-eye"></i> Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i> Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
